    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Flutter (Chrome) - Port 57575",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "deviceId": "chrome",
            "args": [
                "--web-port=57575",
                "--web-browser-flag=--disable-web-security"
            ],
            "toolArgs": [
                "--dart-define=FLUTTER_WEB_USE_EXPERIMENTAL_CANVAS_TEXT=true"
            ]
        },
        {
            "name": "Flutter (macOS)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "deviceId": "macos",
            "args": []
        }
    ]
}